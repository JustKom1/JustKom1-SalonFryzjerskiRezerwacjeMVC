@model Service

@{
    ViewData["Title"] = "Usuń usługę";
}

<h1>Usuń usługę</h1>

<h3>Czy na pewno chcesz usunąć tą usługę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nazwa</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">Cena</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) zł
        </dd>
        <dt class="col-sm-2">Czas trwania</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DurationMinutes) min
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index" style="margin:8px;">Powrót do listy</a>
    </form>
</div>
