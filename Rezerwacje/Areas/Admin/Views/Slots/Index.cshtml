@using Rezerwacje.Helpers
@model IEnumerable<Rezerwacje.Areas.Admin.Models.AdminBookedSlotRowVm>

@{
    ViewData["Title"] = "Terminy";
}

<main class="container">
    <section class="panel">
        <header class="panel-header">
            <h2 class="section-title">Zarządzaj wizytami</h2>
        </header>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @if (!Model.Any())
        {
            <p>Brak wizyt.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Użytkownik</th>
                        <th>Usługa</th>
                        <th>Czas</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td>@row.Date.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(row.UserEmail ?? "-")</td>
                            <td>@(row.ServiceName ?? "-")</td>
                            <td>@TimeHelper.MinutesToText(row.DurationMinutes)</td>
                            <td>@StatusHelper.Badge(row.Status)</td>
                            <td>
                                <form asp-area="Admin"
                                      asp-controller="Reservations"
                                      asp-action="Cancel"
                                      asp-route-id="@row.ReservationId"
                                      method="post"
                                      style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-danger" type="submit">Odwołaj</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</main>
