@using Rezerwacje.Helpers;

@model IEnumerable<Service>

@{
    ViewData["Title"] = "Nasze usługi";
}

<section class="panel">
    <h2 class="section-title">Nasze usługi</h2>
    <p class="form-hint">
        Wybierz usługę i zarezerwuj dogodny termin wizyty.
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Czas</th>
                <th>Cena</th>
                <th>Rezerwacja</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Description</td>
                    <td>@TimeHelper.MinutesToText(s.DurationMinutes)</td>
                    <td>@s.Price.ToString("0.00") zł</td>
                    <td class="actions">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-primary"
                               asp-controller="Reservations"
                               asp-action="Create"
                               asp-route-serviceId="@s.Id">
                                Rezerwuj
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-primary"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                Zaloguj się, aby rezerwować
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
