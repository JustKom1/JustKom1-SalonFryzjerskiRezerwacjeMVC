@using Rezerwacje.Helpers;

@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Moje rezerwacje";
}

<main class="container">
    <section class="panel">
        <header class="panel-header">
            <h2 class="section-title">Moje rezerwacje</h2>
            <p class="form-hint">Tu możesz podejrzeć, edytować i anulować swoje wizyty.</p>
        </header>

        @if (!Model.Any())
        {
            <p>Brak rezerwacji.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Usługa</th>
                        <th>Termin</th>
                        <th>Koszt</th>
                        <th>Czas trwania</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        var service = r.Slot?.Service;
                        <tr>
                            <td>@(service.Name ?? "-")</td>
                            <td>@(r.Slot?.Date.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            <td>@(service != null ? service.Price.ToString("0.00") + " zł" : "-")</td>
                            <td>@TimeHelper.MinutesToText(service?.DurationMinutes)</td>
                            <td>@StatusHelper.Badge(r.Status)</td>
                            <td>
                                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@r.Id">Edytuj</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@r.Id" style="margin-left:8px;">Anuluj</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</main>
